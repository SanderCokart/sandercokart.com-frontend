{
  "extends": [
    "next/core-web-vitals",
    "./lint-react.json",
    "./lint-tailwindcss.json",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "newline-before-return": "warn",
    "@typescript-eslint/consistent-type-imports": ["warn", {"prefer": "type-imports"}],
    "no-multiple-empty-lines": ["warn", {"max": 1}]
  },
  "settings": {
    "next": {
      "rootDir": ["./"]
    }
  }
}